<div class="container shadow p-3 mt-3 rounded-4 border border-black w-75">
  <h1 class="text-center fw-bold">Add a new list</h1>
  <%= simple_form_for @list do |f| %>
    <%= f.input :name, placeholder: "Tipying a name..." %>
    <div class="d-flex justify-content-between">
      <%= f.submit class: "btn btn-primary rounded-5" %>
      <%= link_to "Return to list", lists_path, class: "btn btn-primary rounded-5" %>
    </div>
  <% end %>
</div>
