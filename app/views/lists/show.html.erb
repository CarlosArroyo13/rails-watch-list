<div class="card-category text-center align-items-center"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, crop: :fill %>')">
  <%= @list.name %>
</div>


<div class="container bg-light shadow p-3 w-100 my-4 border rounded-4">
  <div class="d-flex justify-content-around">
    <h1 class="fw-bolder"><%= @list.name %></h1>
    <%= link_to "Return to list", lists_path(@list), class: "btn btn-primary rounded-5 h-25 m-3" %>
    <%= link_to "Make a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary rounded-5 h-25 m-3" %>
  </div>
  <div class="cards">
    <% @list.movies.each do |movie| %>
    <div class="card-trip">
      <%= image_tag(movie.poster_url) %>
      <div class="card-trip-infos">
        <div>
          <div class="d-flex">
          <h2><%= movie.title %></h2>
          <h2 class="text-secondary ms-3" > <i class="fa-solid fa-star"></i> <%= movie.rating.round(2) %></h2>
          </div>
          <% @list.bookmarks.where(movie: movie).each do |bookmark| %>
            <p class="mb-2"><%= movie.overview %></p>
            <div class="container position-relative">
              <p class="text-justify p-1"> üçø<strong><%= bookmark.comment %> </strong> </p>
              <h2 class="card-trip-pricing"><%= link_to "Delete", bookmark_path(bookmark.id), data: {turbo_method: :delete}, class: "btn btn-success rounded-5 position-absolute top-0 end-0" %></h2>
             <!-- <%= button_to "eliminar", bookmark_path(bookmark), method: :delete %> --!> <!--usar link to: traer informaci√≥n(get:index,show,new) y usar button_to: para delete o patch -->
            </div>
          <% end %>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
