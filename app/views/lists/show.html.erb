<div class="container shadow p-3 w-75 my-4 border rounded-4">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.shutterstock.com/image-photo/happy-family-spending-time-together-260nw-2529762817.jpg)">
  Playlist
  </div>

  <div class="d-flex justify-content-between">
    <h1 class="fw-bolder"><%= @list.name %></h1>
    <%= link_to "New bookman", new_list_bookmark_path(@list), class: "btn btn-primary rounded-5 h-25" %>
  </div>
  <div class="cards">
    <% @list.movies.each do |movie| %>
    <div class="card-trip">
      <%= image_tag(movie.poster_url) %>
      <div class="card-trip-infos">
        <div>
          <div class="d-flex">
          <h2><%= movie.title %></h2>
          <h2 class="text-secondary ms-3" > <i class="fa-solid fa-star"></i> <%= movie.rating.round(2) %></h2>
          </div>
          <p><%= movie.overview %></p>
        </div>
        <h2 class="card-trip-pricing"><%= link_to "Delete", "#", class: "btn btn-success rounded-5" %></h2>
      </div>
    </div>
    <% end %>
  </div>
</div>
